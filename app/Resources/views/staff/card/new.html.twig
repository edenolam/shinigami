{%  extends 'staff/staff.html.twig' %}
{% block body %}
   <div class="container">
       <div class="row">
           <div class="col s12 l7">
               <div class="card add-card">
                   {{ form_start(form) }}
                           <div class="card-body">
                                   <div class="col s12 l10 left">
                                       {{ form_row(form.center) }}
                                   </div>
                                   <div class="col s12 l10">
                                       {{ form_row(form.number) }}
                                   </div>
                                   <div class="col s12 l2">
                                       {{ form_row(form.modulo) }}
                                   </div>

                                   <div class="card-action">
                                           <button class="btn retro-jaune" name="generate" id="generate" onclick="generateCard()">Generate</button>
                                           <button class="btn" id="submit" type="submit">Add</button>
                                   </div>
                           </div>

                   {{ form_end(form) }}
               </div>
           </div>
           <div class="col s12 l5">
               <p>Available cards : {{ cards|length }}</p>
               <table class="available-cards">
                   <thead>
                   <tr>
                       <td>ID</td>
                       <td>Center</td>
                       <td>Number</td>
                       <td>Given</td>
                   </tr>
                   </thead>
                   {% for card in cards %}
                       <tr id="rowcard-{{ card.id }}">
                           <td>{{ card.id }}</td>
                           <td>{{ card.center.code }}</td>
                           <td>{{ card.number }}</td>
                           <td>
                               <a class="btn-floating waves-effect waves-light retro-rose" id="give-{{ card.id }}" onclick="giveCard({{ card.id }})"><i class="material-icons">add</i></a>
                           </td>
                       </tr>
                   {% endfor %}
               </table>
           </div>
       </div>

   </div>





{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/ajax/newCard.js') }}"></script>
    <script src="{{ asset('js/ajax/giveCard.js') }}"></script>
{% endblock %}
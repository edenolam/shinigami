{%  extends 'staff/staff.html.twig' %}
{% block body %}
    <h1>New card</h1>

    <div class="row">
        <div class="col s12 m12 l12 xl7">
            <div class="card add-card">
                {{ form_start(form) }}
                <div class="card-body">
                    <div class="row">
                        <div class="col s9 left">
                            {{ form_row(form.center) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="right col s10">
                            <div class="col s10">
                                {{ form_row(form.number) }}
                            </div>
                            <div class="col s2">
                                {{ form_row(form.modulo) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    <div class="row right">
                        <a class="btn orange" name="generate" onclick="generateCard()">Generate</a>
                        <button class="btn" type="submit">Add</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="col s12 m12 l12 xl5">
            <h2>Available cards</h2>
            <table>
                <thead>
                <tr>
                    <td>ID</td>
                    <td>Center</td>
                    <td>Number</td>
                    <td>Given</td>
                </tr>
                </thead>
                {% for card in cards %}
                    <tr id="rowcard-{{ card.id }}">
                        <td>{{ card.id }}</td>
                        <td>{{ card.center.code }}</td>
                        <td>{{ card.number }}</td>
                        <td>
                            <a class="btn-floating waves-effect waves-light retro-rose" id="give-{{ card.id }}" onclick="giveCard({{ card.id }})"><i class="material-icons">add</i></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>






{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/ajax/newCard.js') }}"></script>
    <script src="{{ asset('js/ajax/giveCard.js') }}"></script>
{% endblock %}
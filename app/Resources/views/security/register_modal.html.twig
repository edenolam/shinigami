<div class="card modal-card">
    <span class="card-title">Registration</span>
    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col xl6">
                {{ form_row(form.customer.firstname) }}
            </div>
            <div class="col xl6">
                {{ form_row(form.customer.lastname) }}
            </div>
        </div>
        <div class="row">
            <div class="col xl9">{{ form_row(form.customer.adress) }}</div>
            <div class="col xl3">{{ form_row(form.customer.city) }}</div>
        </div>
        <div class="row">
            <div class="col xl6">{{ form_row(form.customer.phone) }}</div>
            <div class="col xl6">{{ form_row(form.customer.birthday) }}</div>
        </div>

        <div class="row">
            <div class="col xl6">{{ form_row(form.username) }}</div>
            <div class="col xl6">{{ form_row(form.customer.nickname) }}</div>
        </div>
        <div class="row">
        </div>
        <div class="row">
            <div class="col xl12">{{ form_row(form.email) }}</div>
        </div>
        <div class="row">
            <div class="col xl6">{{ form_row(form.plainPassword.first) }}</div>
            <div class="col xl6">{{ form_row(form.plainPassword.second) }}</div>
        </div>

        <button class="btn" id="submit" type="submit">Submit</button>
        {{ form_end(form) }}
    </div>
</div>
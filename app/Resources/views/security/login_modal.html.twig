
    <div class="card modal-card">
        <span class="card-title">Login</span>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">
            <div class="input-field col s12">
                <input type="text" id="username" class="validate" name="_username" value="{{ last_username }}" />
                <label for="username">Username</label>
            </div>
            <div class="input-field col s12">
                <input type="password" id="password" class="validate" name="_password" />
                <label for="password">Password</label>
            </div>

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


            <button class="btn" name="submit" type="submit">login</button>
            <a href="{{ path('forgot_password') }}">Forgot Password</a>
        </form>
    </div>
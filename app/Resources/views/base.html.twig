<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <!--Import Google Icon Font-->
            <link type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}"  media="screen,projection"/>
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <!--Import materialize.css-->
            <link type="text/css" rel="stylesheet" href="{{ asset('css/materialize.min.css') }}"  media="screen,projection"/>
            <link type="text/css" rel="stylesheet" href="{{ asset('css/form.css') }}"/>
        {% endblock %}

    </head>
    <body>
        <nav>
           <div class="container">
               <div class="nav-wrapper">
                   <a href="#" class="brand-logo">SHINIGAMI</a>
                   <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
                   <ul id="nav-mobile" class="right hide-on-med-and-down">
                       {% block nav %}
                           {% if app.user is null %}
                               <li><a href="{{ path('register') }}" id="register">register</a></li>
                               <li><a href="{{ path('login') }}" id="login">login</a></li>
                           {% else %}

                               <li><i class="material-icons">perm_identity</i></li>
                               <li>{{ app.user.username }}</li>
                               <li><a href="{{ path('logout') }}" id="logout">Logout</a></li>
                           {% endif %}
                       {% endblock %}
                   </ul>
               </div>
           </div>
        </nav>

        <main class="container">

           <div id="flashbag">
               {% for label, messages in app.flashes %}
                   {% for message in messages %}
                       <div class="alert alert-{{ label }}">{{ message }}</div>
                   {% endfor %}
               {% endfor %}
           </div>

           {% block body %}{% endblock %}
       </main>

        <!-- footer -->
        <footer class="page-footer">
            <div class="container">
                <div class="row">
                    <div class="col l6 s12">
                        <h5 class="white-text">Footer Content</h5>
                        <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
                    </div>
                    <div class="col l4 offset-l2 s12">
                        <h5 class="white-text">Links</h5>
                        <ul>
                            <li><a class="grey-text text-lighten-3" href="#!">Link 1</a></li>
                            <li><a class="grey-text text-lighten-3" href="#!">Link 2</a></li>
                            <li><a class="grey-text text-lighten-3" href="#!">Link 3</a></li>
                            <li><a class="grey-text text-lighten-3" href="#!">Link 4</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-copyright">
                <div class="container">
                    Â© 2014 Copyright Text
                    <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
                </div>
            </div>
        </footer>
        <!-- fin footer -->

        {% block javascripts %}
            <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
            <script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
            <script>
                    $(".button-collapse").sideNav();
            </script>

        {% endblock %}

    </body>

</html>

